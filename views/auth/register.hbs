{{!-- registration form --}}
<section class="register-page">
  <div class="text-center-register">
    <form class="form-register" method="POST" action="/register">
      <a href="/">
        <img class="mb-4" src="./images/woodpecker.png" alt="" width="72" height="72">
      </a>
      <h1 class="h3 mb-3 font-weight-normal">Your journey starts here:</h1>

      <div class="has-validation">
        <span class="input-group-text"><img src="/images/id-card.png" alt="" width="30" height="30"></span>
        <input type="name" id="inputName" class="form-control" name="name" placeholder="Name" required="" autofocus="">
      </div>
      <label for="" class="sr-only"></label>

      <div class="has-validation">
        <span class="input-group-text"><img src="/images/arroba.png" alt="" width="30" height="30"></span>
        <input type="email" id="inputEmail" class="form-control" name="email" placeholder="you@example.com" required=""
          autofocus="">
      </div>
      <label for="inputEmail" class="sr-only"></label>

      <div class="has-validation">
        <span class="input-group-text"><img src="/images/password.png" alt="" width="30" height="30"></span>
        <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password"
          required="">
      </div>

      <label for="inputPassword" class="sr-only"></label><br>

      {{!-- <div class="checkbox mb-3">
        <label>
          Are you a Personal Trainer?
          <input type="checkbox" value="PT">
        </label>
      </div> --}}

      <button class="btn btn-lg btn-danger btn-block" type="submit">Register</button>
      <br>
      <p>or</p>
    </form>
    <div class="social-login">
      <button href="/auth/google" class="btn btn-lg btn-danger btn-block" type="submit"><img class="google-img"
          src="/images/google.png" alt=""> <span>|</span> Use your Google account</button>
    </div>
  </div>
</section>

