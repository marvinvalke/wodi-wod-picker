{{!-- see your created WODs --}}
<section id="wod-list-section">
    <h1>MY WODS</h1>
    <div class="wod-container">
        <div class="wod-list">
            {{#each wods}}
            <p><a class="wod-link" href="/wod/{{this._id}}">{{this.name}} :</a> <i>{{this.environement}} </i>| <i>{{this.duration}}
                    min</i> | <i>{{this.intensity}}</i></p>
            {{/each}}
        </div>
    </div>
    <div class="create-wod-btn">
        <form method="GET" action="/wod/create">
            <button class="create-btn btn-primary" type="submit">CREATE A WOD</button>
        </form>
    </div>
</section>

