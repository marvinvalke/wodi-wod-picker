<h1>EXERCISE SEARCH ENGINE</h1>
<form class="search" action="/exercise" method="GET">
    <input class="search" type="text" placeholder="Search for exercises..." name="search">
    <button>Search</button>
</form>
<div class='searched-exercises'>
    {{#each searchedExercises}}
    <p> <a href="/exercise/{{this._id}}">{{this.name}}</a></p>
    <a href="/exercise/{{this._id}}">
        <img src="{{this.gifUrl}}" alt="ExerciseGif">
    </a>
    {{/each}}
</div>
<div class="exercises-list">
    {{#each allExercises}}
    <p> <a href="/exercise/{{this._id}}">{{this.name}}</a></p>
    <a href="/exercise/{{this._id}}">
        <img src="{{this.gifUrl}}" alt="ExerciseGif">
    </a>
    {{/each}}
</div>